#include<stdio.h>
int main()
{
    int n,r=0,sum=0,ld;
    printf("Enter a number :");
    scanf("%d",&n);
    while(n>0)
    {
        r=r*10;
        r=n%10+r;
        ld=n%10;
        sum=sum+ld;
        n=n/10;
        
    }
    printf("Reverse of the digits is : %d",r);
    printf("\nSum of the digits is : %d",sum);
    return 0;
}
