#include<stdio.h>
int main()
{
    int n;
    printf("Enter a number :");
    scanf("%d",&n);
    int sum=0;
    for(int i=1;i<=n;i++)           //if(n%2==0)
    {                               //    sum=-(n/2);
        if(i%2!=0)                  //else
        sum=sum+i;                  //    sum=-(n/2)+n;
        else                        //
        sum=sum-i;                  //
    }
    printf("Sum of the numbers is : %d",sum);
    return 0;
}
